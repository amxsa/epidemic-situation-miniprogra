/* pages/together/result.wxss */

.page {
  width: 100vw;
  height: 100vh;
}

.info {
  background: #8ab;
  padding: 40rpx;
  height: 200rpx;
}

.info view:nth-child(1) {
  font-size: 40rpx;
  color: #fff;
}

.info view:nth-child(2) {
  font-size: 27rpx;
  color: #fff;
}

.content {
  padding: 20rpx;
  height: calc(100vh - 201rpx);
  background: #f4f4f4;
}

.item {
  display: flex;
  border-radius: 10rpx;
  background: #fff;
  width: 100%;
  margin-bottom: 30rpx;
  position: relative;
}

.item .tips {
  position: absolute;
  top: 0;
  right: 0;
  font-size: 25rpx;
  color: #fff;
  font-weight: 600;
  padding: 5rpx 10rpx;
  background-color: #e24;
  text-align: center;
  border-bottom-left-radius: 10rpx;
  border-top-right-radius: 10rpx;
}

.item>view:nth-child(1) {
  width: 180rpx;
  background: #8ab;
  border-radius: 10rpx;
  border-top-right-radius: 0;
  border-bottom-right-radius: 0;
  padding: 20rpx;
}

.item>view:nth-child(2) {
  flex: 1;
}

.item-info {
  display: flex;
  padding: 20rpx;
}

.item-info>view {
  flex: 3;
}

.item-info>view:nth-child(3) {
  flex: 1;
}

.item-info>view .opacity {
  opacity: 0;
}

.jiantou {
  display: flex;
  align-items: center;
  justify-content: center;
}

.jiantou icon {
  font-size: 40rpx;
  transform: rotate(90deg);
}

.color {
  color: #808080;
}

.fw {
  font-weight: bold;
  font-size: 35rpx;
}

.date {
  text-align: center;
  font-size: 40rpx;
  font-weight: bold;
  color: #fff;
  margin-bottom: 50rpx;
}

.icon, .type {
  text-align: center;
  font-size: 30rpx;
  font-weight: bold;
  color: #fff;
}

.icon icon {
  font-size: 50rpx;
}
