.relocation {
  position: absolute;
  top: 300rpx;
  right: 30rpx;
  z-index: 99;
}

.relocation cover-image {
  width: 60rpx;
  height: 60rpx;
  background: rgba(0, 0, 0, 0.3);
  color: #fff;
}

.enlarge {
  position: absolute;
  top: 400rpx;
  right: 30rpx;
  z-index: 99;
}

.enlarge cover-image {
  width: 60rpx;
  height: 60rpx;
  background: rgba(0, 0, 0, 0.3);
  color: #fff;
}

.loadUp {
  text-align: center;
  margin: 20rpx 0;
  font-size: 25rpx;
  color: #ccc;
}

.search {
  position: relative;
  padding: 30rpx 20rpx;
  box-sizing: border-box;
  width: 100vw;
}

.search input {
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 100px;
  border: 1px solid #eee;
  background: rgba(248, 248, 248, 1);
  padding-left: 60rpx;
}

.search icon {
  left: 40rpx;
  top: 45rpx;
}
