/* pages/index/index.wxss */

.page {
  width: 100%;
  height: 100vh;
  position: relative;
}

.map {
  height: 520rpx;
  background: #f2f2f2;
}

.info {
  background: #fff;
  margin-top: 20rpx;
}

.current-location {
  font-size: 40rpx;
  padding: 0 20rpx;
  display: flex;
}

.current-location >view:nth-child(1) {
  flex: 5;
}

.current-location .icon-shuaxin {
  font-size: 45rpx;
  color: #188ae2;
}

.current-location >view:nth-child(2) {
  font-size: 25rpx;
}

.share {
  flex: 1;
  background: #188ae2;
  color: #fff;
  height: 50rpx;
  line-height: 50rpx;
  border-radius: 30rpx;
  padding: 0 25rpx;
  font-weight: normal;
}

.share text {
  margin-left: 10rpx;
}

.share icon {
  position: relative;
  top: -6rpx;
}

.info-content {
  margin-top: 50rpx;
}

.info-content .item {
  border-bottom: 1px solid #eee;
  padding: 0 30rpx;
  padding-bottom: 20rpx;
}

.info-content .item>view:nth-child(1) {
  margin-top: 50rpx;
}

.info-content .filed {
  display: flex;
  font-size: 35rpx;
  border-bottom: 2prx solid #eee;
}

.info-content .filed view:nth-child(1) {
  flex: 4;
}

.info-content .filed view:nth-child(2) {
  flex: 2;
  text-align: right;
}

.address {
  color: rgba(148, 148, 148, 1);
}

.info-content .filed  .city {
  background: rgba(172, 60, 60, 1);
  color: #eee;
}

.info-content .filed  .district {
  color: #eee;
  background: rgba(230, 105, 105, 1);
  margin-left: 30rpx;
}

.lately {
  color: #188ae2;
}

.filed1 {
  margin-top: 30rpx;
}

.filed1 view {
  font-size: 30rpx;
}

.filed1 view:nth-child(1)> .border {
  padding: 5rpx 10rpx;
  border-radius: 20rpx;
  font-size: 28rpx;
  /* border: 1rpx solid #888; */
}

