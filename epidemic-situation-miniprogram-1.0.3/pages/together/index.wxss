/* pages/together/index.wxss */

.page {
  width: 100vw;
}

.open {
  display: inline-block;
  background: #188ae2;
  color: #fff;
  border-radius: 30rpx;
  padding: 10rpx 30rpx;
  font-weight: normal;
  font-size: 30rpx;
}

image {
  width: 100vw;
  height: 250rpx;
}

.info {
  text-align: center;
  color: rgba(197, 197, 197, 1);
  margin: 30rpx 0;
  font-size: 25rpx;
}

.toMiniprogram {
  padding: 20rpx;
}

.toMiniprogram .item {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  border-radius: 10rpx;
  color: #fff;
}

.toMiniprogram .item>view {
  flex: 1;
}

.toMiniprogram .item>view icon {
  font-size: 60rpx;
  color: #fff;
  margin-right: 40rpx;
}

.toMiniprogram .item>view:nth-child(2) {
  flex: 5;
}

.toMiniprogram .tips {
  color: #fff;
  font-size: 30rpx;
}

.toMiniprogram .title {
  font-size: 40rpx;
  font-weight: bold;
}

.jiantou {
  display: flex;
  align-items: center;
  justify-content: center;
}

.jiantou icon {
  font-size: 40rpx;
  transform: rotate(90deg);
}

.content {
  margin-top: 20rpx;
}

.content>view {
  width: 33.33%;
  display: inline-block;
  text-align: center;
  height: 200rpx;
  color: #188ae2;
}

.content>view icon {
  font-size: 80rpx;
  color: #188ae2;
}

.content image {
  width: 100rpx;
  height: 100rpx;
  position: relative;
  top: 30rpx;
}

.train {
  background: rgb(52, 168, 83);
}

.flight {
  background: rgb(18, 200, 215);
  margin: 40rpx 0;
}

.city {
  background: rgb(255, 82, 105);
}
